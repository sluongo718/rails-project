

<%= form_for @recipe do |f| %>
    Name: <%= f.text_field :name %><br>
    Cook Time: <%= f.number_field :cook_time %><br>
    Directions: <%= f.text_area :directions, size: "12x6" %><br>
    <p>Select a category:</p>
    <%= f.collection_select(:category_ids, Category.all, :id, :name, {include_blank: 'Select a category'}, { multiple: true, :style => "width:150px"}) %>

    <button type=f.submit >Submit</button>

<% end %>
<h1>Create a Recipe!</h1>

<% if flash[:error] %>
    <%= flash[:error] %>
<% end %>

<%= form_for @recipe do |f| %>
    Name: <%= f.text_field :name %><br>
    Cook Time: <%= f.number_field :cook_time %><br>
    Directions: <%= f.text_field :directions %><br>
    <p>Select a category:</p>
    <%= f.collection_select(:category_ids, Category.all, :id, :name, {include_blank: 'Select a category'}, { multiple: true, :style => "width:150px", :class => "form-control" }) %>

    <%= f.submit %>

    <% end %>
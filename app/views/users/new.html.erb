<h1>Create your account here!</h1>

<% if flash[:error] %>
    <%= flash[:error] %>
<% end %>

<%= form_for @user do |f| %>
    Name: <%= f.text_field :name %><br>
    Email: <%= f.email_field :email %><br>
    Password: <%= f.password_field :password %><br>
    password confirmation: <%= f.password_field :password_confirmation %>
    <%= f.submit %>
    <% end %>